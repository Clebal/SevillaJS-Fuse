<StackPanel ux:Class="Comment" Margin="30,10,0,0">

  <Grid ColumnCount="2" Columns="1,auto" Alignment="TopLeft">

    <Rectangle CornerRadius="100" Width="30" Height="30" Margin="0,10">
      <ImageFill Url="{avatar}" StretchMode="UniformToFill"/>
    </Rectangle>

    <Text Margin="20,10,0,10" Alignment="Center">{autor}</Text>

  </Grid>

  <Text TextWrapping="Wrap">{comment}</Text>

</StackPanel>
